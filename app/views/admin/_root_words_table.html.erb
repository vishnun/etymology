<div class="col-sm-12 medium-table-container">
  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th>Root Word</th>
      <th>Meaning</th>
      <th>Usages</th>
    </tr>
    </thead>

    <tbody>
    <% @rootwords.each do |rootword| %>
        <tr>
          <td><%= rootword.word %></td>
          <td><%= rootword.meaning %></td>
          <td><%= rootword.usages %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>