<div class="space-bar"></div>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <%= render partial: 'new_root_word_form' %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <table class="table table-striped table-bordered">
        <thead>
        <tr>
          <th>Root Word</th>
          <th>Meaning</th>
          <th>Usages</th>
        </tr>
        </thead>

        <tbody>
        <% @rootwords.each do |rootword| %>
            <tr>
              <td><%= rootword.word %></td>
              <td><%= rootword.meaning %></td>
              <td><%= rootword.usages %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
