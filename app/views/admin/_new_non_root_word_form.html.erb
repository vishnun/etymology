<div class="text-center">
  <%= form_tag non_rootwords_path, role: 'form', class: 'form-horizontal', id: 'root_word' do %>

      <div class="form-group col-sm-6">
        <label class="col-sm-3 text-right">Word</label>

        <div class="col-sm-9">
          <%= text_field :non_root_word, :word, placeholder: 'word', title: 'root word', required: true, class: "form-control" %>
        </div>
      </div>

      <div class="form-group col-sm-6">
        <label class="col-sm-3 text-right">Root word</label>

        <div class="col-sm-9">
          <%= select('non_root_word', 'id', @rootwords.map { |rw| [rw.word, rw.id] }, {include_blank: 'Select Root Word'}, {required: true, class: 'form-control', title: 'rootword'}) %>
        </div>
      </div>

      <div class="form-group col-sm-6">
        <label class="col-sm-3 text-right">Meaning</label>

        <div class="col-sm-9">
          <%= text_area :non_root_word, :meaning, placeholder: 'meaning (comma separated)', title: 'meaning', required: true, class: "form-control", rows: 3 %>
        </div>
      </div>

      <div class="form-group col-sm-6">
        <label class="col-sm-3 text-right">Usage</label>

        <div class="col-sm-9">
          <%= text_area :non_root_word, :usages, placeholder: 'usages (comma separated)', title: 'usages', required: true, class: "form-control", rows: 3 %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-3 col-sm-offset-5">
          <div class="space-bar"></div>
          <button type="submit" class="btn btn-primary btn-block">Add</button>
        </div>
      </div>
  <% end %>
</div>

<div class="space-bar"></div>