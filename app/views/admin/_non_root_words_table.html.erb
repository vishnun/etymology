<div class="col-sm-12 medium-table-container">
  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th>Word</th>
      <th class="hidden-xs">Meaning</th>
      <th>Root word</th>
      <th class="hidden-xs">Usages</th>
    </tr>
    </thead>

    <tbody>
    <% @non_rootwords.each do |non_rootword| %>
        <tr>
          <td><%= non_rootword.word %></td>
          <td class="hidden-xs">
            <% meanings = '' %>
            <%- non_rootword.meaning.each do |meaning| %>
                <% meanings = meanings + ', ' +  meaning %>
            <% end %>
            <%= meanings.from(1) %>
          </td>
          <td><%= non_rootword.rootword.word %></td>
          <td class="hidden-xs">
            <% usages = '' %>
            <%- non_rootword.usages.each do |usage| %>
                <% usages = usages + ', ' +  usage %>
            <% end %>
            <%= usages.from(1) %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>