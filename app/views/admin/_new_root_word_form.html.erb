<%= form_tag rootwords_path, role: 'form', class: 'form-horizontal', id: 'root_word' do %>

    <div class="form-group">
      <label class="col-sm-4 text-right">Word</label>
      <div class="col-sm-4">
        <%= text_field :root_word, :word, placeholder: 'root word', title: 'root word', required: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-4 text-right">Meaning</label>
      <div class="col-sm-4">
        <%= text_field :root_word, :meaning, placeholder: 'meaning', title: 'meaning', required: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-4 text-right">Usage</label>
      <div class="col-sm-4">
        <%= text_field :root_word, :usages, placeholder: 'usages', title: 'usages', required: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-4 col-sm-offset-4 text-center">
        <button type="submit" class="btn btn-block btn-primary">Add</button>
      </div>
    </div>
<% end %>